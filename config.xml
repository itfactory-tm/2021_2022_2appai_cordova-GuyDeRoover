<?xml version='1.0' encoding='utf-8'?>
<widget id="be.guyderoover.wallmania" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Wallmania</name>
    <description>
        An application to find awesome wallpapers.
    </description>
    <author email="r0781424@student.thomasmore.be">
        Guy De Roover
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="resources/android/icon/drawable-ldpi-icon.png" />
        <icon density="mdpi" src="resources/android/icon/drawable-mdpi-icon.png" />
        <icon density="hdpi" src="resources/android/icon/drawable-hdpi-icon.png" />
        <icon density="xhdpi" src="resources/android/icon/drawable-xhdpi-icon.png" />
        <icon density="xxhdpi" src="resources/android/icon/drawable-xxhdpi-icon.png" />
        <icon density="xxxhdpi" src="resources/android/icon/drawable-xxxhdpi-icon.png" />
        <splash density="land-hdpi" src="resources/android/screen/splash-land-hdpi.png" />
        <splash density="land-ldpi" src="resources/android/screen/splash-land-ldpi.png" />
        <splash density="land-mdpi" src="resources/android/screen/splash-land-mdpi.png" />
        <splash density="land-xhdpi" src="resources/android/screen/splash-land-xhdpi.png" />
        <splash density="land-xxhdpi" src="resources/android/screen/splash-land-xxhdpi.png" />
        <splash density="land-xxxhdpi" src="resources/android/screen/splash-land-xxxhdpi.png" />
        <splash density="port-hdpi" src="resources/android/screen/splash-port-hdpi.png" />
        <splash density="port-ldpi" src="resources/android/screen/splash-port-ldpi.png" />
        <splash density="port-mdpi" src="resources/android/screen/splash-port-mdpi.png" />
        <splash density="port-xhdpi" src="resources/android/screen/splash-port-xhdpi.png" />
        <splash density="port-xxhdpi" src="resources/android/screen/splash-port-xxhdpi.png" />
        <splash density="port-xxxhdpi" src="resources/android/screen/splash-port-xxxhdpi.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
